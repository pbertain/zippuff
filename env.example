# USPS API Credentials
# Copy this file to .env and fill in your actual credentials
USPS_USERID=your_actual_usps_userid_here
USPS_CONSUMER_KEY=your_consumer_key_here
USPS_CONSUMER_SECRET=your_consumer_secret_here

# API Configuration
USPS_TEST_MODE=true  # Set to false for production

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=59080
APP_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Ansible Deployment Configuration
# These variables are used by the inventory.yml file
ZIPPUFF_HOST=your_deployment_host_here
ZIPPUFF_USER=ubuntu
ZIPPUFF_SSH_KEY=~/.ssh/id_rsa 